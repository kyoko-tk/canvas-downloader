{
  "name": "Canvas downloader (Numbered)",
  "short_name": "Canvas DL Num",
  "version": "1.3.1",
  "manifest_version": 3,
  "description": "Extension helps detect if canvas is used at the web page and allows to export and save canvas content (Files: 001, 002...)",
  "homepage_url": "https://github.com/santriseus/canvas-downloader",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    },
    "default_title": "Canvas downloader (Numbered)",
    "default_popup": "src/popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "src/inject.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "src/service_worker.js"
  },
  "permissions": [
    "downloads",
    "clipboardWrite"
  ]
}
